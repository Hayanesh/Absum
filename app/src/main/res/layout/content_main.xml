<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"


    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.hayanesh.absum.MainActivity"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:id="@+id/first_card"
        android:background="@drawable/blue_gradient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/app_cover_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/blue_pink_grad" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:id="@+id/product_name"
            android:padding="20dp"
            android:typeface="serif"
            android:textStyle="italic"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-80dp"
            android:text="One plus 3T"/>
        <LinearLayout
            android:layout_below="@+id/product_name"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2">
            <LinearLayout
                android:layout_weight="0.7"
                android:orientation="vertical"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:paddingLeft="20dp"
                android:id="@+id/product_name_panel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/total"
                    android:alpha="0.7"
                    android:textStyle="italic"
                    android:layout_marginTop="70dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="Reviews : 2400"/>
                <LinearLayout
                    android:alpha="0.7"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <TextView
                    android:textSize="16sp"
                    android:textStyle="italic"
                    android:padding="10dp"
                    android:drawablePadding="10dp"
                    android:layout_width="wrap_content"
                    android:id="@+id/pos"
                    android:layout_height="wrap_content"
                    android:text="2000"
                    android:drawableRight="@drawable/ic_thumb_up_black_24dp"/>
                <TextView
                    android:id="@+id/neg"
                    android:textSize="16sp"
                    android:textStyle="italic"
                    android:layout_marginLeft="5dp"
                    android:drawablePadding="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2000"
                    android:drawableRight="@drawable/ic_thumb_down_black_24dp"/>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="130dp">

                <com.github.lzyzsd.circleprogress.ArcProgress
                    android:paddingTop="20dp"
                    android:id="@+id/arc_progress"
                    android:background="#00000000"
                    android:layout_marginLeft="5dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"

                    custom:arc_bottom_text="SCORE"
                    android:elevation="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>
        </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_below="@+id/first_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        android:elevation="10dp">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:scrollbars="none" />
    </android.support.v7.widget.CardView>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
