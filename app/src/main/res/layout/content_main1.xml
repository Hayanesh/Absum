                                android:padding="20dp"
                                android:layout_centerHorizontal="true"
                                custom:arc_bottom_text="SCORE"
                                android:elevation="10dp"
                                android:layout_marginLeft="50dp"
                                custom:donut_progress="70"
                                custom:donut_text_size="24sp"
                                custom:donut_text_color="@color/white"
                                custom:donut_finished_color="@color/blue_800"
                                custom:donut_unfinished_color="@color/light_blue_200"
                                />
                            <LinearLayout
                                android:layout_marginTop="10dp"
                                android:layout_below="@+id/arc_progress"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:alpha="0.8"
                                android:weightSum="3">
                                <LinearLayout
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                <TextView
                                    android:id="@+id/total"
                                    android:text="6000"
                                    android:textSize="20sp"
                                    android:typeface="monospace"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    />
                                <TextView
